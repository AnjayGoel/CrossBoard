<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical" android:weightSum="100">

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:id="@+id/textView" android:layout_weight="60"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="40">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@android:drawable/ic_media_previous"
                android:id="@+id/imageButton" android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="?attr/actionModeCopyDrawable"
                android:id="@+id/imageButton3" android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@android:drawable/ic_menu_share"
                android:id="@+id/imageButton4" android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@android:drawable/ic_media_next"
                android:id="@+id/imageButton2" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>

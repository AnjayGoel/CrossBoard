<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                app:layout_constraintBottom_toTopOf="@+id/passwd"
                app:layout_constraintTop_toBottomOf="@+id/name" app:layout_constraintStart_toStartOf="@+id/guideline11"
                app:layout_constraintEnd_toStartOf="@+id/guideline11"/>

        <EditText
                android:id="@+id/passwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                app:layout_constraintBottom_toTopOf="@+id/register"
                app:layout_constraintStart_toStartOf="@+id/guideline11" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline11"/>

        <Button
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Register"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintBottom_toTopOf="@+id/guideline6"
                app:layout_constraintTop_toTopOf="@+id/guideline6"/>

        <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:hint="Username"
                android:inputType="textPersonName"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline7"
                app:layout_constraintEnd_toStartOf="@+id/guideline11"
                app:layout_constraintStart_toStartOf="@+id/guideline11"/>

        <TextView
                android:id="@+id/username_tag"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="Username: "
                android:textAlignment="center"
                android:textColor="#000000"
                android:textDirection="inherit"
                android:textIsSelectable="false"
                android:textSize="20sp"
                android:textStyle="normal"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/name"
                app:layout_constraintEnd_toStartOf="@+id/name"
                app:layout_constraintTop_toTopOf="@+id/name"
                app:layout_constraintVertical_bias="0.0"/>

        <TextView
            android:id="@+id/email_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="Email: "
            android:textAlignment="center"
            android:textColor="#000000"
            android:textDirection="inherit"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/email"
            app:layout_constraintEnd_toStartOf="@+id/email"
            app:layout_constraintTop_toTopOf="@+id/email" />

        <TextView
            android:id="@+id/passwd_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="Password: "
            android:textAlignment="center"
            android:textColor="#000000"
            android:textDirection="inherit"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/passwd"
            app:layout_constraintEnd_toStartOf="@+id/passwd"
            app:layout_constraintTop_toTopOf="@+id/passwd" />
        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="0dp"
                app:layout_constraintGuide_percent="0.5"
                android:id="@+id/guideline5"/>
        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="0dp"
                app:layout_constraintGuide_percent="0.8"
                android:id="@+id/guideline6"/>
        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="0dp"
                app:layout_constraintGuide_percent="0.4"
                android:id="@+id/guideline7"/>
        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="0dp"
                app:layout_constraintGuide_percent="0.55"
                android:id="@+id/guideline11"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>

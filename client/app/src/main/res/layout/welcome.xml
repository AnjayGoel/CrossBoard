<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:animateLayoutChanges="true"
              android:layout_height="match_parent" android:id="@+id/linearLayout2">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.5">

        <Button
                android:id="@+id/signin_w"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="Sign-In"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline9"
                app:layout_constraintHorizontal_bias="0.549" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline8"
                app:layout_constraintBottom_toTopOf="@+id/guideline8"/>

        <Button
                android:id="@+id/register_w"
                android:layout_height="wrap_content"
                android:layout_width="103dp"
                app:layout_constraintWidth_percent="0.25"
                android:text="Register"

                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline9"
                app:layout_constraintHorizontal_bias="0.468"
                app:layout_constraintTop_toBottomOf="@+id/signin_w"/>
        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                app:layout_constraintGuide_percent="0.7"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="0dp"
                android:id="@+id/guideline8"/>
        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                app:layout_constraintGuide_percent="0.5"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="205dp"
                android:id="@+id/guideline9"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
